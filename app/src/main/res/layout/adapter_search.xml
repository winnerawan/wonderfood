<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lyt_search_adapter"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/padding_bottom_1dp"
    android:paddingLeft="@dimen/padding_left_4dp"
    android:paddingRight="@dimen/padding_right_4dp">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="@dimen/width_150dp"
            android:layout_height="@dimen/height_90dp"
            android:gravity="center"
            android:padding="@dimen/padding_4dp">

            <ImageView
                android:id="@+id/image"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scaleType="centerCrop"/>

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />
            </FrameLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="@dimen/nol_dp"
            android:layout_height="@dimen/height_90dp"
            android:layout_weight="1.0"
            android:orientation="vertical"
            android:padding="@dimen/padding_4dp">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:orientation="horizontal"
                android:weightSum="5.0">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="@dimen/nol_dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4.0"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_title" />

                <LinearLayout
                    android:layout_width="@dimen/nol_dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:gravity="right">

                </LinearLayout>
            </LinearLayout>

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/nol_dp"
                android:layout_weight="1.0"
                android:gravity="bottom"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="@dimen/padding_right_8dp"
                        android:text=""
                        android:textColor="@color/yellow"
                        android:textSize="@dimen/txt_title" />


                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>